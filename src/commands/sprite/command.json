{
  "name": "sprite",
  "alias": "sp",
  "version": "0.1",
  "author": "eagle.h",
  "description": "将图片合并为精灵图。",
  "options": [{
    "flags": "-c, --color"
  }, {
    "flags":"-r, --rem",
    "description": "使用rem作为长度单位"
  }, {
    "flags":"-a, --algorithm [value]",
    "description": "图片布局：top-down left-right diagonal alt-diagonal binary-tree，默认：binary-tree"
  }, {
    "flags":"-f, --files [value]",
    "description": "需要处理的文件，支持minimatch规则，默认为当前目录下所有图片文件"
  }, {
    "flags":"-d, --dist [value]",
    "description": "发布目录，默认为 ./build"
  }],
  "requires": []
}
